<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="rcoleman.rasmussencollege.com.warera.GamePlay">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="103dp"
        android:background="#ffffff"
        ads:srcCompat="@drawable/gametitle"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="-25dp"
        android:layout_weight="0.03" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp">

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="103dp"
            android:layout_height="77dp"
            android:background="#ffffff"
            ads:srcCompat="@drawable/menubutton" />

        <TextView
            android:id="@+id/textViewUser"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="User: "
            android:textColor="#e9d857"
            android:textSize="19sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textZones"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Zone: "
                android:textColor="#e9d857"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/zoneWins"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Zones Won: "
                android:textColor="#e9d857"
                android:textSize="19sp" />
        </TableLayout>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:weightSum="1">

        <FrameLayout
            android:id="@+id/the_Frame"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_weight="0.99">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp">

            <TextView
                android:id="@+id/userStrategy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" User ouput"
                android:textColor="#0f0f0f" />

            <ImageView
                android:id="@+id/outputImage"
                android:layout_width="104dp"
                android:layout_height="match_parent"
                ads:srcCompat="@drawable/hero" />

                <TextView
                    android:id="@+id/userPoints"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Points: "
                    android:textColor="#0f0f0f" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginTop="100dp">

                <TextView
                    android:id="@+id/aiStrategy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" AI ouput"
                    android:textColor="#0f0f0f" />

                <ImageView
                    android:id="@+id/outputImage2"
                    android:layout_width="104dp"
                    android:layout_height="match_parent"
                    ads:srcCompat="@drawable/hero" />

                    <TextView
                        android:id="@+id/aiPoints"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Points: "
                        android:textColor="#0f0f0f" />

            </LinearLayout>
        </FrameLayout>

    </TableLayout>

    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attack"
        android:textColor="#8c8b8b"/>

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leave the area"
        android:textColor="#8c8b8b"/>

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Defend"
        android:textColor="#8c8b8b" />

</LinearLayout>

