<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="rcoleman.rasmussencollege.com.warera.LoginScreen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:background="#ffffff"
        ads:srcCompat="@drawable/gametitle"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="-25dp"
        android:layout_weight="0.03" />

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>


    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_weight="0.02"
        android:background="#ffffff"
        ads:srcCompat="@drawable/menubutton" />


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Login to play the game"
            android:textColor="#8c8b8b"/>

               <EditText
                   android:id="@+id/userName"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="user name"
                   android:background="#8c8b8b"
                   android:ems="10"
                   android:inputType="textPersonName"
                   />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_email"
                    android:inputType="textEmailAddress"
                    android:background="#8c8b8b"
                    android:maxLines="1"
                    />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_password"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:background="#8c8b8b"
                    android:maxLines="1"
                    />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remember Me"
                android:background="#8c8b8b"
                android:id="@+id/checkBoxRememberMe"/>

            <Button
                android:id="@+id/email_sign_in_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/action_sign_in"
                android:textStyle="bold"/>

</LinearLayout>

